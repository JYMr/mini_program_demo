/* pages/Common/ReservationInput/ReservationInput.wxss */
.ReservationInput{position: fixed;z-index: 999;top: 50%;right: 0;left: 0; width: 570rpx;margin: 0 auto;transform: translate3d(0, -50%, 0);animation: ReservationfadeInDown .3s forwards;}
.mask{ position: fixed;z-index: 998;top: 0;right: 0;bottom: 0;left: 0;margin: auto;background-color: rgba(0,0,0,.6);}
.ReservationInput .title{ font-size: 36rpx;line-height: 107rpx;display: block;width: 100%;text-align: center;color: #222;border-radius: 10rpx 10rpx 0 0;background-color: #fff;position: relative;}
.ReservationInput .title .loading{display: block; width: 30rpx;height: 30rpx;transition: all 1s;animation: loading 1s linear infinite;vertical-align: bottom;position: absolute;top: 0;bottom: 0;margin: auto;right: 150rpx;
		background: url('http://www.kzj365.com/mini_program/images/loading_img.png') center center no-repeat;background-size: 30rpx;}
.ReservationInput .input-item{line-height: 88rpx;overflow: hidden;padding: 0 20rpx; border-top: 1rpx solid #ddd;background-color: #fff;}
.ReservationInput .input-item text{line-height: 88rpx; display: block;float: left;box-sizing: border-box;width: 144rpx;padding: 0 16rpx;}
.ReservationInput .input-item input{line-height: 88rpx;float: left; width: 386rpx;height: 88rpx;}
.ReservationInput .input-item .region{float: left; width: 386rpx;height: 88rpx;}

.close{ position: absolute;top: -20rpx;right: -20rpx;width: 40rpx;height: 40rpx;background: url(data:image/png;base64,) center center no-repeat;background-size: 40rpx;}

.ReservationInput .ReservationInputBtn{font-size: 32rpx;line-height: 98rpx;display: block;height: 98rpx;text-align: center;color: #fff;border-radius: 0 0 10rpx 10rpx; background-color: #ddd;}
.ReservationInput .ReservationInputBtn.active{ background-color: #37c4a4;}

@keyframes ReservationfadeInDown{from{opacity: 0;}
    to{opacity: 1;}}

@keyframes loading{ from{ transform: rotate(360deg);}
    to{ transform: rotate(0deg);}}
