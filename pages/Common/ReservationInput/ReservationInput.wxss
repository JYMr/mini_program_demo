/* pages/Common/ReservationInput/ReservationInput.wxss */
.ReservationInput{width:  570rpx;position: fixed;top: 50%;left: 0;right: 0;margin: 0 auto;z-index: 999;transform: translate(0, -50%);animation-name: fadeInDown;animation-duration: .3s;animation-fill-mode: both;}
.mask{position: fixed;z-index: 998;top: 0;bottom: 0;left: 0;right: 0;margin: auto;background-color: rgba(0,0,0,.6);}
.ReservationInput .title{font-size: 36rpx;color: #222;line-height: 107rpx;text-align: center;width: 100%;display: block;background-color: #FFF;border-radius: 10rpx 10rpx 0 0;}
.ReservationInput .input-item{border-top: 1rpx solid #ddd;line-height: 88rpx;padding: 0 20rpx;overflow: hidden;background-color: #FFF;}
.ReservationInput .input-item text{display: block;width: 144rpx;box-sizing: border-box;padding: 0 16rpx;line-height: 88rpx;float: left;}
.ReservationInput .input-item input{width: 386rpx;float: left;line-height: 88rpx;height: 88rpx;}
.ReservationInput .input-item .region{width: 386rpx;height: 88rpx;float: left;}

.close{position: absolute;width: 40rpx;height: 40rpx;right: -20rpx;top: -20rpx;
background: url(data:image/png;base64,) center center no-repeat;background-size: 40rpx;}

.ReservationInput .ReservationInputBtn{background-color: #ddd;color: #FFF;text-align: center;font-size: 32rpx;display: block;line-height: 98rpx;height: 98rpx;border-radius: 0 0 10rpx 10rpx;}
.ReservationInput .ReservationInputBtn.active{background-color: #37c4a4;}

@keyframes fadeInDown{from{transform: translate3d(0, -50%, 0);opacity: 0;}
    to{transform: none;opacity: 1;}}