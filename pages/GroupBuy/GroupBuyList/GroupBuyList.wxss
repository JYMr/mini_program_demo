/* pages/GroupBuy/GroupBuyList/GroupBuyList.wxss */
.index-grid{ overflow: hidden; padding: 20rpx 30rpx 0;}
.index-grid .slide{padding: 20rpx 0;}
.index-grid .slide:last-child{ padding-bottom: 0;}
.index-grid .slide .pic{ position: relative;width: 100%; height: 316rpx; box-sizing: border-box; padding:0 10rpx;}
.index-grid .slide-image{ width: 100%; height: 100%;}
.index-grid .slide .discount{ width:155rpx; height: 91rpx; position: absolute; right: 18rpx; top: -20rpx; z-index: 100; display: flex; justify-content: center; align-items: center; flex-direction: column; font-size: 24rpx; padding-bottom: 20rpx;  background: url(http://www.kzj365.com/mini_program/images/discounticon.png) no-repeat 0 0; background-size: 100%; }
.index-grid .slide .discount .icon{  width:155rpx; height: 111rpx;position: absolute; z-index: 101; top: 0; left: 0;}
.index-grid .slide .discount text{ color: #fff; position: relative; z-index: 102;}
.index-grid .slide .discount .n{ font-style:italic; }
.index-grid .slide .name{ position: absolute; z-index: 102; left: 10rpx; right: 10rpx; bottom: 0; font-size: 26rpx; height: 60rpx; line-height: 60rpx; color: #fff; background: rgba(0, 0, 0, 0.4); white-space: nowrap; text-overflow: ellipsis; overflow: hidden; padding: 0 30rpx;}
.index-grid .slide .bottom{ background: #fff; line-height: 98rpx; height: 98rpx; box-sizing: border-box; padding: 0 30rpx; margin:0 10rpx;font-size: 24rpx;color: #888;}
.index-grid .slide .join-btn{ float: right;  height: 48rpx; line-height: 48rpx; background: #ff5c58; border-radius: 6rpx; color:#fff; margin-top: 25rpx; }
.index-grid .slide .join-btn text{display: inline-block;padding: 0 20rpx;font-size: 26rpx;}
.index-grid .slide .join-btn text + text{border-left: 1rpx solid #FFF;}
.index-grid .slide .price{ font-size: 30rpx; color: #ff5c58;}