<!--pages/goods/index.wxml-->
<import src="/pages/Common/TypeIcon.wxml" />
<!-- banner -->
<swiper class="goodsilder" indicator-dots="true" autoplay="true" interval="5000" duration="500">
    <block wx:for="{{goodsinfo.siderimg}}" wx:for-item="item" wx:for-index='index' wx:key="slider_{{index}}">
        <swiper-item>
            <image src="{{item?item:defaultImg}}" binderror="errImg" data-err-img="goodsinfo.siderimg[{{index}}]" class="slide-image" />
        </swiper-item>
    </block>
</swiper>
<!-- server -->
<view class='goodserver'>
    <view class='item'>
        <text class='icon'></text>正品保障</view>
    <view class='item'>
        <text class='icon'></text>正规发票</view>
    <view class='item'>
        <text class='icon'></text>隐私配送</view>
    <view class='item'>
        <text class='icon'></text>药师服务</view>
</view>
<!-- 基本信息 -->
<view class='goodsinfo'>
    <button class='share' open-type="share"></button>
    <view class='name'>
        <template is="TypeIcon" data="" />{{goodsinfo.name}}</view>
    <view class='price-item'>
        <text class='price'>¥<text class='nums'>{{goodsinfo.price}}</text></text><text class='market'>¥<text class='nums'>{{goodsinfo.market}}</text></text>
    </view>
    <view class='detail'>{{goodsinfo.manufacturer}}</view>
</view>
<!-- 规格 -->
<view class='goodsattr' bindtap="showModal">商品规格:
    <text>{{goodsinfo.selectspec!='' ? goodsinfo.selectspec : "请选择"}}</text>
</view>
<!-- nav -->
<view class="goodsnav" bindtap="tabs">
    <view class='item {{tabsindex=="0" ? "hover" : ""}}' data-id="0" animation="{{animation2}}">图文详情</view>
    <view class='item {{tabsindex=="1" ? "hover" : ""}}' data-id="1" animation="{{animation1}}">说明书</view>
</view>
<!-- 图文详情 -->
<view class='infogrid {{tabsindex=="0" ? "show" : "hide"}}'>
    <view class='goodsdetail'>
        <block wx:for='{{detaildata}}' wx:for-item="item" wx:for-index='index' wx:key="detail_{{index}}">
            <image src='{{item}}'></image>
        </block>
    </view>
</view>
<!-- 说明书 -->
<view class='infogrid {{tabsindex=="1" ? "show" : "hide"}}'>
    <view class='instructions'>
        <view class="table">
            <view class="tr">
                <view class="th">药品名称</view>
                <view class="td">汤臣倍健 果疏纤维咀嚼片</view>
            </view>
        </view>
    </view>
</view>

<!-- float -->
<view class='goodsfloat'>
    <navigator class='phone' hover-class='none'>
        <view class='icon'></view>
        <view>联系客服</view>
    </navigator>
    <navigator url='cart/cart' class='cart' hover-class='none'>
        <view class='icon'></view>
        <view>购物车</view>
    </navigator>
    <view class='addcart' bindtap="showModal" data-type="Cart">加入购物车</view>
    <view class='buy' bindtap="showModal" data-type="Buy">立即购买</view> 

    <view class='offer'>该商品已下架</view>
    <view class='outstock'>该商品已缺货</view>
</view>

<!-- 属性弹出框 -->
<view class='prop' id='select-attr' wx:if="{{showModalStatus}}">
    <view class='select-attr' animation="{{animationData}}">
        <view class='close' bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
        <view class='info'>
            <image class='pic' src='{{goodsinfo.siderimg[1]}}'></image>
            <view class='price'>¥
                <text class='nums'>{{goodsinfo.price}}</text>
            </view>
            <view class='name'>{{goodsinfo.name}}</view>
        </view>
        <block wx:if="{{speclists}}">
            <view class='grid attr'>
                <view class='t'>规格</view>
                <view class='lists'>
                    <block wx:for="{{speclists}}" wx:for-item="item" wx:for-index='index' wx:key="spec_{{index}}">
                        <view class="item{{item.isselect?' on':''}}"  data-index="{{index}}" data-type="spec" bindtap='ClickAttr'>{{item.name}}</view>
                    </block>
                </view>
            </view>
        </block>
        <block wx:if="{{packager}}">
            <view class='grid packager'>
                <view class='t'>优惠套餐</view>
                <view class='lists'>
                    <block wx:for="{{packager}}" wx:key="packager_{{index}}">
                        <view class="item{{item.isselect?' on':''}}"  data-index="{{index}}" data-type="packager" bindtap='ClickAttr'>{{item.name}}</view>
                    </block>
                </view>
            </view>
        </block>
        <view class='grid'>
            <view class='t'>数量</view>
            <view class='control'>
                <view class='mins {{goodsnums.minsStatus}}' bindtap="bindMinus" hover-class="hover">-</view>
                <input type='number' class='nums' bindchange="bindManual" value="{{goodsnums.nums}}"></input>
                <view class='plus {{goodsnums.plusStatus}}' hover-class="hover" bindtap="bindPlus">+</view>
            </view>
        </view>
        <view class='comfirm-btn' hover-class="hover" wx:if="{{hasUserInfo || ModalMode == 'Cart' ||  ModalMode == ''}}" bindtap="ModalConfirm">确定</view>
        <button class='comfirm-btn' open-type="getUserInfo" bindgetuserinfo="getUserInfo" hover-class="hover" wx:if="{{!hasUserInfo && ModalMode == 'Buy'}}" bindtap="ModalConfirm">确定</button>
    </view>
    <view class='gray-bg' bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
</view>

<import src="../Common/footer.wxml" />
<template is="footer" data="" />