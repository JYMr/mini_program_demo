/* pages/user/myorder.wxss */
.ordernav{font-size: 26rpx;line-height: 88rpx;position: fixed;z-index:200; top: 0;right: 0;left: 0;display: flex;flex-direction: row;height: 88rpx;text-align: center;color: #888;border-bottom: #f4f4f4 1px solid; background: #fff;justify-content: space-around;align-items: center;}
.ordernav-bank{ height: 88rpx;}
.ordernav .item{ display: flex;text-align: center;flex: 1;align-items: center;justify-content: center;}
.ordernav .item.on{font-weight: 700;position: relative; color: #37c4a4;}
.ordernav .item.on::after{position: absolute;z-index: 100;right: 0;bottom: 0;left: 0;width: 52rpx;height: 6rpx;margin: auto; content: '';background: #37c4a4;}
.orderlists{margin-bottom: 20rpx; background: #fff;}
.orderlists .title{ line-height: 88rpx;height: 88rpx;padding: 0 30rpx;}
.orderlists .title .name{ font-size: 30rpx;font-weight: 700;color: #37c4a4;}
.orderlists .title .shopicon{float: left; width: 40rpx;height: 40rpx;margin-top: 24rpx;margin-right: 15rpx;background: url(http://www.kzj365.com/mini_program/images/shopicon.png) no-repeat center center;background-size: 100%;}
.orderlists .title .pedpay,.orderlists .title .peddelivery,.orderlists .title .share{ font-size: 30rpx;font-weight: 700;float: right;color: #ff5c58;}
.orderlists .title .cancel,.orderlists .title .success,.orderlists .title .aftersale{ font-size: 30rpx;font-weight: 700;float: right;color: #ddd;}
.orderlists .lists .item{position: relative;display: block;overflow: hidden; padding: 30rpx; background: #fafafa; margin-bottom: 10rpx;}
.orderlists .lists .item:last-child{ margin-bottom: 0;}
.orderlists .lists .pic{float: left; width: 140rpx;height: 140rpx;margin-right: 30rpx;}
.orderlists .lists .name{font-size: 26rpx;line-height: 1.4;display: -webkit-box;overflow: hidden;height: 100rpx; text-overflow: ellipsis;color: #4a5259;-webkit-line-clamp: 3;-webkit-box-orient: vertical;}
.orderlists .lists .type{line-height: 30rpx;display: inline-block;height: 30rpx;margin-right: 10rpx;padding: 0 10rpx;text-align: center;vertical-align: middle;text-transform: uppercase;color: #fff;border-radius: 50rpx; background: #37c4a4; position: relative; top: -2px;}
.orderlists .lists .type.redbg{ background: #ff5c58;}
.orderlists .lists .price{font-size: 20rpx;font-weight: 700; color: #ff5c58;}
.orderlists .lists .price .n{ font-size: 30rpx;}
.orderlists .lists .attr{ color: #888;}
.orderlists .lists .ctype{display: inline-block;margin-left: 10rpx; padding: 0 10rpx;text-align: center;color: #fff; background: #37c4a4;}
.orderlists .lists .nums{font-size: 28rpx;position: absolute;z-index: 100;right: 30rpx;bottom: 30rpx; color: #888;}
.orderlists  .total{line-height: 48rpx; height: 48rpx;padding: 20rpx 30rpx;text-align: right;color: #222;border-top: #f4f4f4 1px solid;}
.orderlists .control{ padding: 20rpx 30rpx;text-align: right;}
.orderlists .cancel-btn,.orderlists .rebuy-btn,.orderlists .delete-btn{font-size: 26rpx;line-height: 46rpx;display: inline-block;box-sizing: border-box;width: 140rpx;height: 50rpx;margin-left: 20rpx;text-align: center;color: #888; border: #ddd 1px solid;border-radius: 10rpx;background: #fff;}
.orderlists .aftersale-btn{font-size: 26rpx;line-height: 46rpx;display: inline-block;box-sizing: border-box;width: 140rpx;height: 50rpx;margin-left: 20rpx;text-align: center;color: #fff; border: #ddd 1px solid;border-radius: 10rpx;background: #ddd;}
.orderlists .gopay-btn,.orderlists .joingroup-btn{font-size: 26rpx;line-height: 46rpx;display: inline-block;box-sizing: border-box;width: 140rpx;height: 50rpx;margin-left: 20rpx;text-align: center;color: #fff; border: #ff5c58 1px solid;border-radius: 10rpx;background: #ff5c58;}
.orderlists .green{color: #fff;border-color: #37c4a4; background-color: #37c4a4;}
.orderlists .TypeIcon{ background: #37c4a4; display: inline-block; line-height: 30rpx; vertical-align: middle; padding: 0 10rpx; font-size: 24rpx; height: 30rpx; color: #fff; text-align: center; margin-right: 10rpx; text-transform: uppercase; border-radius: 50rpx;}
.orderlists .TypeIcon.redbg{ background: #ff5c58;}
.orderlists .TypeIcon.bjp{height: 30rpx;width: 47rpx;
	background: url("http://www.kzj365.com/mini_program/images/bjpicon.png") center center no-repeat;background-size: 47rpx 30rpx;}