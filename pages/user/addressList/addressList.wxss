.addressList{padding-bottom: 98rpx;}
.addressItem{background-color: #FFF;}
.addressItem + .addressItem{margin-top: 20rpx;}
.addressData{padding: 36rpx 30rpx;border-bottom: 1rpx solid #f4f4f4;}
.addressData .name{font-size: 34rpx;color: #222}
.addressData .mobile{font-size: 29rpx;color: #222;margin-left: 32rpx;}
.addressData .detail{display: block;font-size: 26rpx;color: #888;line-height: 36rpx;margin-top: 25rpx;}

.addressBottonGroup{padding: 0 30rpx;overflow: hidden;}
.addressDefault{padding: 18rpx 0;float: left;color: #555}
.addressDefault text{line-height: 36rpx;margin: 18rpx 0;}
.addressDefault .addressDefaultIcon{width: 36rpx; height: 36rpx;margin-right: 20rpx;display: inline-block;
	background: url(data:image/png;base64,) center center no-repeat;background-size: 36rpx; vertical-align: middle;}

.addressButton{float: right;height: 72rpx;width: auto;}
