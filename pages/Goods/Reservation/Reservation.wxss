/* pages/cart/reservation.wxss */
.Need-list{padding-bottom:98rpx;}

.cart-title{ height: 88rpx; line-height: 88rpx; border-bottom: #f4f4f4 1px solid; background: #fff; font-weight: 700; padding: 0 30rpx; font-size: 30rpx;}
.cart-title .edit{ float: right; color: #888;}
.cart-title .allselect{ float: left; color: #ddd; }
.cart-title .allselect .icon{ width: 36rpx; height: 36rpx; border-radius: 100%; display: inline-block; margin-right: 20rpx; background:url(http://www.kzj365.com/mini_program/images/successicon.png) no-repeat center center #ddd; background-size: 100%; vertical-align: middle; position: relative; top: -2px;}
.cart-title .allselect.on{ color: #3cc6a6;}
.cart-title .allselect.on .icon{ background-color: #3cc6a6;}

.cart-item{background: #fff; margin-bottom: 20rpx; }
.cart-item .goods{ overflow: hidden; padding: 20rpx 30rpx; position: relative;}
.cart-item .select{width: 36rpx; height: 36rpx; border-radius: 100%; background:url(http://www.kzj365.com/mini_program/images/successicon.png) no-repeat center center #ddd; background-size: 100%;  margin-top: 50rpx; margin-right: 20rpx; float: left;}
.cart-item .select.on{ background-color: #3cc6a6;}
.cart-item .pic{ width: 140rpx; height: 140rpx; float: left; margin-right: 30rpx;}
.cart-item .name{ text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 3;-webkit-box-orient: vertical;overflow: hidden;  color: #4a5259; font-size: 26rpx; height: 100rpx; line-height: 1.4;}
.cart-item .TypeIcon{ background: #37c4a4; display: inline-block; line-height: 30rpx; vertical-align: middle; padding: 0 10rpx; font-size: 24rpx; height: 30rpx; color: #fff; text-align: center; margin-right: 10rpx; text-transform: uppercase; border-radius: 50rpx;}
.cart-item .TypeIcon.redbg{ background: #ff5c58;}
.cart-item .TypeIcon.bjp{height: 30rpx;width: 47rpx;
	background: url("http://www.kzj365.com/mini_program/images/bjpicon.png") center center no-repeat;background-size: 47rpx 30rpx;}
.cart-item .price{color: #ff5c58; font-size: 20rpx; font-weight: 700;}
.cart-item .price .n{ font-size: 30rpx;}
.cart-item .attr{ color: #888;}
.cart-item .ctype{ background: #37c4a4; display: inline-block; padding: 0 10rpx;color: #fff; text-align: center; margin-left: 10rpx; }
.cart-item .bottom{height: 50rpx; line-height: 50rpx; padding:18rpx 30rpx;border-top: #f4f4f4 1px solid;}
.cart-item .bottom .tips{ color: #222; margin-left: 56rpx;}
.cart-item .bottom .control{ overflow: hidden; float: right;}
.cart-item .bottom .control .mins,.cart-item .bottom .control .plus{ width: 50rpx; height: 50rpx;  float: left; background: #f4f4f4; color: #999; text-align: center; line-height: 48rpx; font-size: 40rpx; border-radius: 100%; }
.cart-item .bottom .control .mins.hover,.cart-item .bottom .control .plus.hover{ background: #e5e5e5;}
.cart-item .bottom .control .disabled{ color: #a4aab3;}
.cart-item .bottom .control .nums{ float: left; height:50rpx; width:60rpx; text-align: center; color: #222; }

.floattotal{ position: fixed; bottom: 0; left: 0; right: 0; margin: auto; z-index: 500; background: #fff; box-shadow: rgba(0, 0,0,0.1) 5rpx 10rpx 20rpx;font-weight: 700;}
.floattotal .allselect{ float: left; color: #ddd; margin-top: 31rpx; margin-left: 30rpx;  }
.floattotal .allselect .icon{ width: 36rpx; height: 36rpx; border-radius: 100%; display: inline-block; margin-right: 20rpx; background:url(http://www.kzj365.com/mini_program/images/successicon.png) no-repeat center center #ddd; background-size: 100%; vertical-align: middle; position: relative; top: -2px;}
.floattotal .allselect.on{ color: #3cc6a6;}
.floattotal .allselect.on .icon{ background-color: #3cc6a6;}
.floattotal .info{ float: right; text-align: right; margin-top: 20rpx;line-height: 1.2;}
.floattotal .info .price{color: #ff5c58; font-size: 20rpx; font-weight: 700;}
.floattotal .info .price .n{ font-size: 30rpx;}
.floattotal .buy-btn{ float: right; width: 286rpx; height: 98rpx; line-height: 98rpx; color: #fff; background: #ff5c58; font-weight: 700; text-align: center; margin-left: 20rpx;font-size: 32rpx;}
.floattotal button.buy-btn{font-size: 32rpx;margin-right: 0;padding-right: 0;padding-left: 0; border-radius: 0;}
.floattotal .free{ font-size: 20rpx;}