/* pages/List/Activity/Activity.wxss */

.activity-image{ text-align: center; background: #fff;}
.activity-image image{ width: 100%; vertical-align: middle;}

.index-grid{ overflow: hidden; background: #fff;  padding: 0 30rpx;}
.index-grid .title{ margin-top: 36rpx; line-height: 36rpx; height: 36rpx; border-left: #37c4a4 10rpx solid; padding-left: 10rpx;}
.index-grid .title .more{ float: right; color: #bbb; font-size: 30rpx;}
.index-grid .slide{ overflow: hidden; }
.index-grid .slide swiper{ height: 450rpx; width: 100%; padding-bottom: 36rpx;}
.index-grid .slide swiper-item{ padding-top: 36rpx;}
.index-grid .slide .pic{ position: relative;width: 100%; height: 316rpx; box-sizing: border-box;}
.index-grid .slide-image{ width: 100%; height: 100%;}
.index-grid .slide .discount{ width:155rpx; height: 91rpx; position: absolute; right: 18rpx; top: -20rpx; z-index: 100; display: flex; justify-content: center; align-items: center; flex-direction: column; font-size: 24rpx; padding-bottom: 20rpx;  background: url(http://www.kzj365.com/mini_program/images/discounticon.png) no-repeat 0 0; background-size: 100%; }
.index-grid .slide .discount .icon{  width:155rpx; height: 111rpx;position: absolute; z-index: 101; top: 0; left: 0;}
.index-grid .slide .discount text{ color: #fff; position: relative; z-index: 102;}
.index-grid .slide .discount .n{ font-style:italic; }
.index-grid .slide .name{ position: absolute; z-index: 102; left: 0; right: 0; bottom: 0; font-size: 26rpx; height: 60rpx; line-height: 60rpx; color: #fff; background: rgba(0, 0, 0, 0.4); white-space: nowrap; text-overflow: ellipsis; overflow: hidden; padding: 0 30rpx;}
.index-grid .slide .bottom{ background: #f8f8f8; line-height: 98rpx; height: 98rpx; box-sizing: border-box; padding: 0 30rpx; }
.index-grid .slide .join-btn{ float: right; padding: 0 20rpx; height: 48rpx; line-height: 48rpx; background: #ff5c58; border-radius: 6rpx; color:#fff; margin-top: 25rpx; }
.index-grid .slide .price{ font-size: 30rpx; color: #ff5c58;}
.goodslists{ overflow: hidden; background: #fff; margin-top: 30rpx;}
.goodslists .item{ float: left; box-sizing: border-box; width: 50%; padding: 25rpx;}
.goodslists .pic{ width: 220rpx; height: 220rpx; display: block; margin:0 auto 30rpx;}
.goodslists .name{ font-size: 26rpx; margin-bottom: 10rpx; height: 75rpx; overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
.goodslists .price{ font-size: 34rpx; color: #ff5656;}
.chat-btn{ height: 88rpx; line-height: 88rpx; text-align: center; color: #fff; font-size: 30rpx; background: #3dc6a7; border-radius: 100rpx; margin:20rpx; }

