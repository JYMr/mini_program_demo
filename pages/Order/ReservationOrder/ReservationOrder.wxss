/* pages/user/myreservation.wxss */
.ordernav{ background: #fff; height: 88rpx; display: flex; flex-direction: row; justify-content: space-around; align-items: center; line-height: 88rpx; font-size: 26rpx; color: #888; text-align: center; border-bottom: #f4f4f4 1px solid;position: fixed;z-index: 200; top: 0;right: 0;left: 0;}
.ordernav .item{ display: flex;flex: 1;text-align: center; align-items: center; justify-content: center; }
.ordernav .item.on{ color: #37c4a4; position: relative; font-weight: 700;}
.ordernav .item.on::after{ content: ''; height:6rpx; width: 52rpx; background: #37c4a4; position: absolute; left: 0; right: 0; z-index: 100; margin: auto; bottom: 0;}
.ordernav-bank{ height: 88rpx;}
.orderlists{ background: #fff; margin-bottom: 20rpx;}
.orderlists .title{ line-height: 88rpx; height: 88rpx; padding: 0 30rpx;}
.orderlists .title .name{ font-size: 30rpx; color: #37c4a4; font-weight: 700;}
.orderlists .title .shopicon{ width: 40rpx; height: 40rpx; margin-top: 24rpx; margin-right: 15rpx; float: left;background: url(http://www.kzj365.com/mini_program/images/shopicon.png) no-repeat center center; background-size: 100%;}
.orderlists .title .audited{ font-size: 30rpx; font-weight: 700; color: #ff5c58; float: right;}
.orderlists .title .success{ font-size: 30rpx; font-weight: 700; color: #37c4a4; float: right;}
.orderlists .title .cancel,.orderlists .title .completion{ font-size: 30rpx; font-weight: 700; color: #ddd; float: right;}
.orderlists .lists{ border-bottom: #f4f4f4 1px solid;}
.orderlists .lists .item{background: #fafafa; position: relative; margin-bottom: 10rpx; padding: 30rpx; display: block; overflow: hidden;}
.orderlists .lists .item:last-child{ margin-bottom: 0;}
.orderlists .lists .pic{ width: 140rpx; height: 140rpx; float: left; margin-right: 30rpx;}
.orderlists .lists .name{ text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 3;-webkit-box-orient: vertical;overflow: hidden;  color: #4a5259; font-size: 26rpx; height: 106rpx; line-height: 1.4;}
.orderlists .TypeIcon{ background: #37c4a4; display: inline-block; line-height: 30rpx; vertical-align: middle; padding: 0 10rpx; font-size: 24rpx; height: 30rpx; color: #fff; text-align: center; margin-right: 10rpx; text-transform: uppercase; border-radius: 50rpx;}
.orderlists .TypeIcon.redbg{ background: #ff5c58;}
.orderlists .TypeIcon.bjp{height: 30rpx;width: 47rpx;
	background: url("http://www.kzj365.com/mini_program/images/bjpicon.png") center center no-repeat;background-size: 47rpx 30rpx;}
.orderlists .lists .price{color: #ff5c58; font-size: 20rpx;font-weight: 700;}
.orderlists .lists .price .n{ font-size: 30rpx;}
.orderlists .lists .attr{ color: #888;}
.orderlists .lists .ctype{ background: #37c4a4; display: inline-block; padding: 0 10rpx;color: #fff; text-align: center; margin-left: 10rpx; }
.orderlists .lists .nums{ color:#888; font-size:28rpx; position:absolute; right:30rpx; z-index: 100; bottom: 30rpx;}
.orderlists .total{ height: 48rpx; line-height: 48rpx; color: #222; text-align: right; padding:20rpx 30rpx;border-bottom: #f4f4f4 1px solid; }
.orderlists .control{ padding: 20rpx 30rpx; text-align: right;}
.orderlists .cancel-btn,.orderlists .delete-btn,.orderlists .resubmit-btn,.orderlists .refund-btn{ border:#ddd 1px solid; border-radius: 10rpx; color: #888; font-size: 26rpx; height: 50rpx; line-height: 46rpx; box-sizing: border-box; text-align: center; width: 140rpx; display: inline-block; background: #fff; margin-left: 20rpx;}
.orderlists .aftersale-btn{ border:#ddd 1px solid; border-radius: 10rpx; color: #fff; font-size: 26rpx; height: 50rpx; line-height: 46rpx; box-sizing: border-box; text-align: center; width: 140rpx; display: inline-block; background: #ddd; margin-left: 20rpx;}
.orderlists .gopay-btn,.orderlists .joingroup-btn{ border:#ff5c58 1px solid; border-radius: 10rpx; color: #fff; font-size: 26rpx; height: 50rpx; line-height: 46rpx; box-sizing: border-box; text-align: center; width: 140rpx; display: inline-block; background: #ff5c58; margin-left: 20rpx;}
.float-customer{ height: 120rpx; display: inline-block; position: fixed; left: 20rpx; z-index: 500; bottom: 20rpx;background: #fff;  border-radius: 120rpx;box-shadow: rgba(0, 0,0,0.1) 5rpx 10rpx 20rpx;}
.float-customer .default{ width: 120rpx; height: 120rpx;background: url(http://www.kzj365.com/mini_program/images/chaticon.png) no-repeat center center; background-size: 100%; float: left; box-shadow: rgba(55, 196, 164, 0.5) 5rpx 10rpx 20rpx; border-radius: 100%;}
.float-customer .extend{ width: 0; height: 120rpx; overflow: hidden;-webkit-transition: all .2s ease-out;transition: all .2s ease-out;}
.float-customer .extend .text{ width: 250rpx; height: 100%; display: flex; justify-content: center; align-items: center; text-align: center; float: left;  font-size: 30rpx; color: #37c4a4; font-weight: 700; position: relative;}
.float-customer .extend .text:first-child:after{ content: ''; display: inline-block; border-right: #ddd 2rpx solid; height:27rpx; position: absolute; z-index: 100; top: 0; bottom: 0; right: 0; margin: auto;}
.float-customer .extend.open{ width: 500rpx;}
