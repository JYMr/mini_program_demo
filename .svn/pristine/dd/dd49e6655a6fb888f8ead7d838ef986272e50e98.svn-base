/**app.wxss**/
page{font-family:"Helvetica Neue",Verdana,Helvetica,Arial,"Microsoft Yahei","Hiragino Sans GB","Heiti SC","WenQuanYi Micro Hei",sans-serif;background:#f4f4f4;color: #555;font-size: 28rpx; line-height: 1.5;}

.show{ display: block;}
.hide{ display: none;}
.footer{ padding: 25rpx 0; text-align: center; font-size: 24rpx; color: #dddddd; line-height: 2;}
.footer .img{ width: 154rpx; height: 38rpx;}

.nav-blank{ height: 96rpx;}
#nav{ height: 98rpx; background: #fff; box-shadow: rgba(0, 0,0, 0.05) 0 -1px 3px; position: fixed; bottom: 0; left:0; right: 0; z-index: 1000; display: flex; flex-direction: row; align-items: center; justify-content:space-around; color: #bbb; font-size: 20rpx; line-height: 1.2;}
#nav .navli{ display: inline-block; text-align: center;}
#nav .navli .icon{ width: 50rpx; height: 50rpx; display: inline-block;}
#nav .navli .icon01{background: url(http://www.kzj365.com/mini_program/images/navicon01.png) no-repeat center center; background-size: 90%; }
#nav .navli .icon02{background: url(http://www.kzj365.com/mini_program/images/navicon02.png) no-repeat center center; background-size: 90%; }
#nav .navli .icon03{background: url(http://www.kzj365.com/mini_program/images/navicon03.png) no-repeat center center; background-size: 95%; }
#nav .navli .icon04{background: url(http://www.kzj365.com/mini_program/images/navicon04.png) no-repeat center center; background-size:auto 90%; }

#nav .navli.hover .icon01{background: url(http://www.kzj365.com/mini_program/images/navicon-hover01.png) no-repeat center center; background-size: 90%; }
#nav .navli.hover .icon02{background: url(http://www.kzj365.com/mini_program/images/navicon-hover02.png) no-repeat center center; background-size: 90%; }
#nav .navli.hover .icon03{background: url(http://www.kzj365.com/mini_program/images/navicon-hover03.png) no-repeat center center; background-size: 95%; }
#nav .navli.hover .icon04{background: url(http://www.kzj365.com/mini_program/images/navicon-hover04.png) no-repeat center center; background-size:auto 100%; }


.float-customer{ height: 120rpx; display: inline-block; position: fixed; left: 20rpx; z-index: 500; bottom: 40rpx;background: #fff;  border-radius: 120rpx;box-shadow: rgba(0, 0,0,0.1) 5rpx 10rpx 20rpx;}
.float-customer .default{ width: 120rpx; height: 120rpx;background: url(http://www.kzj365.com/mini_program/images/chaticon.png) no-repeat center center #37c4a4; background-size:100%; float: left; box-shadow: rgba(55, 196, 164, 0.5) 5rpx 10rpx 20rpx; border-radius: 100%;}
.float-customer .extend{ width: 0; height: 120rpx; overflow: hidden;-webkit-transition: all .2s ease-out;transition: all .2s ease-out;}
.float-customer .extend .text{ width: 250rpx; height: 100%; display: flex; justify-content: center; align-items: center; text-align: center; float: left;  font-size: 30rpx; color: #37c4a4; font-weight: 700; position: relative;}
.float-customer .extend .text:first-child:after{ content: ''; display: inline-block; border-right: #ddd 2rpx solid; height:27rpx; position: absolute; z-index: 100; top: 0; bottom: 0; right: 0; margin: auto;}
.float-customer .extend.open{ width: 500rpx;}

.empty{ text-align: center; display: flex; flex-direction: column; justify-content: center; align-items: center; width: 100%; min-height: 600rpx; color: #888; line-height: 2;}
.empty::before{ content: ''; width: 111rpx; height: 129rpx; display: inline-block; background: url(http://www.kzj365.com/mini_program/images/emptyicon.png) no-repeat center center; background-size:100%;}