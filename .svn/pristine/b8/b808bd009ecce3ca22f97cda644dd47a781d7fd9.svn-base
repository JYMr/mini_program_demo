<!--pages/cart.wxml-->
<view class='cart-title'>
  <text class='allselect'><text class='icon'></text>全选</text>
  <text class='edit'>编辑</text>
</view>
<view class='cart-item'>
  <view class='goods'>
    <text class='select'></text>
    <navigator hover-class='none'>
      <image class='pic' src='http://kzjimg01.b0.upaiyun.com/1508118546272.jpg'></image>
      <view class='name'>仁和健途(jintoo) 高级大胶原蛋白壳寡糖果味饮品480ml/瓶 </view>
      <text class='price'>￥<text class='n'>25.90</text></text>
      <text class='attr'>/1盒</text>
      <text class='ctype'>疗程装</text>
    </navigator>
  </view>
  <view class='bottom'>
    <text class='tips'>3盒起480元；</text>
    <view class='control'>
        <view class='mins {{goodsnums.minsStatus}}' bindtap="bindMinus" hover-class="hover">-</view>
        <input type='number' class='nums' bindchange="bindManual" value="{{goodsnums.nums}}1"></input>
        <view class='plus {{goodsnums.plusStatus}}' hover-class="hover" bindtap="bindPlus">+</view>
      </view>
  </view>
</view>
<open-data type="userAvatarUrl"></open-data>

<view class='floattotal'>
  <view class='buy-btn'>去结算 (12)</view>
  <view class='info'>
    <view>总计：<text class='price'>¥ <text class='n'>2915.90</text></text></view>
    <text class='free'>（已免邮）</text>
  </view>
  <text class='allselect'><text class='icon'></text>全选</text>
</view>

<!-- 导航 -->
<Nav id="nav" route="{{route}}"></Nav>